{% extends 'layout.nunjucks' %}

{% block meta %}
  <meta name='robots' content='noindex'>
{% endblock %}

{% block header %}
<h1 class="local-header--title--question">GP surgeries</h1>
{% endblock %}

{% block content %}
<div class="results">
  <h2 data-results="{{services.length}}" data-term="{{location}}" class="local-header--title--question">Select your GP surgery</h2>

  <div class="grid-row">
    <ol class="results">
      {% for service in services %}
        <li class="results__item results__item--nearby" data-index="{{loop.index}}">
          <div class="results__details results__details--nearby">
            {% include "includes/gp-result-item.nunjucks" %}
          </div>
          <!--[if IE]><div style="clear: both;" class="clear-both"></div><![endif]-->
        </li>
      {% endfor %}
    </ol>
  </div>
</div>
{% endblock %}
