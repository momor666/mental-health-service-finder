{% extends 'layout.nunjucks' %}

{% set resultsLength = results.length %}

{% block header %}
<h1 class="local-header--title--question">Psychological therapies services</h1>
{% endblock %}

{% block content %}
<div class="results">
  {% if resultsLength === 0 %}
    <h2 class="local-header--title--question">There are no services available for the selected CCG</h2>
  {% elif resultsLength === 1 %}
    <h2 class="local-header--title--question">1 service is available</h2>
  {% else %}
    <h2 class="local-header--title--question">{{ results.length }} services are available</h2>
  {% endif %}

  {% if resultsLength > 0 %}
  <div class="grid-row">
    <ol class="results">
      {% for result in results %}
        <li class="results__item results__item--nearby" data-index="{{loop.index}}">
          <div class="results__details results__details--nearby">
            {% include "includes/iapt-result-item.nunjucks" %}
          </div>
          <!--[if IE]><div style="clear: both;" class="clear-both"></div><![endif]-->
        </li>
      {% endfor %}
    </ol>
  </div>
  {% else %}
    <p class="no-results">No results</p>
  {% endif %}
</div>
{% endblock %}
